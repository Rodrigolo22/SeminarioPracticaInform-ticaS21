<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="SeminarioPractica.controller.MisSolicitudesController">

    <top>
        <Label text="Mis Solicitudes" styleClass="title" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10" styleClass="card">
            <TableView fx:id="tblSolicitudes" prefHeight="420">
                <columns>
                    <TableColumn fx:id="colId"          text="ID"         prefWidth="70"/>
                    <TableColumn fx:id="colObra"        text="Obra"       prefWidth="220"/>
                    <TableColumn fx:id="colFecha"       text="Fecha"      prefWidth="120"/>
                    <TableColumn fx:id="colPrioridad"   text="Prioridad"  prefWidth="110"/>
                    <TableColumn fx:id="colEstado"      text="Estado"     prefWidth="120"/>
                    <TableColumn fx:id="colDescripcion" text="DescripciÃ³n" prefWidth="400"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding><Insets topRightBottomLeft="10"/></padding>
            <Button text="Actualizar" onAction="#actualizar"/>
            <Button text="Volver" onAction="#volver"/>
        </HBox>
    </bottom>
</BorderPane>
