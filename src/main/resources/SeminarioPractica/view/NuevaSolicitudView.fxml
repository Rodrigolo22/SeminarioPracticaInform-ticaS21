<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="SeminarioPractica.controller.NuevaSolicitudController">
    <top>
        <Label text="Nueva Solicitud" styleClass="title" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="12" styleClass="card">
            <GridPane hgap="12" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="18"/>
                    <ColumnConstraints percentWidth="32"/>
                    <ColumnConstraints percentWidth="18"/>
                    <ColumnConstraints percentWidth="32"/>
                </columnConstraints>

                <!-- Cabecera -->
                <Label text="Obra"/>
                <ComboBox fx:id="cboObra" GridPane.columnIndex="1" prefWidth="240"/>

                <Label text="Prioridad" GridPane.columnIndex="2"/>
                <ComboBox fx:id="cboPrioridad" GridPane.columnIndex="3" prefWidth="180"/>

                <!-- Línea a agregar -->
                <Label text="Tipo" GridPane.rowIndex="1"/>
                <ComboBox fx:id="cboTipo" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="180"/>

                <Label text="Nombre" GridPane.rowIndex="2"/>
                <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Cantidad" GridPane.rowIndex="3"/>
                <TextField fx:id="txtCantidad" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Nota/Detalle" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <TextField fx:id="txtNota" GridPane.columnIndex="3" GridPane.rowIndex="2" GridPane.columnSpan="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Agregar ítem" onAction="#agregarItem"/>
                <Button text="Quitar seleccionado" onAction="#quitarItem"/>
            </HBox>

            <TableView fx:id="tblItems" prefHeight="250">
                <columns>
                    <TableColumn text="Tipo"       fx:id="colTipo"     prefWidth="120"/>
                    <TableColumn text="Nombre"     fx:id="colNombre"   prefWidth="260"/>
                    <TableColumn text="Cantidad"   fx:id="colCant"     prefWidth="120"/>
                    <TableColumn text="Nota"       fx:id="colNota"     prefWidth="260"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding><Insets topRightBottomLeft="10"/></padding>
            <Button text="Cancelar" onAction="#volver"/>
            <Button text="Guardar solicitud" onAction="#guardar"/>
        </HBox>
    </bottom>
</BorderPane>
