<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="SeminarioPractica.controller.SolicitudHistorialController">

    <top>
        <VBox spacing="5">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Label text="Historial de la Solicitud" styleClass="title"/>

            <GridPane hgap="10" vgap="5">
                <columnConstraints>
                    <ColumnConstraints minWidth="80" halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="lblId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Obra:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="lblObra" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Solicitante:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="lblSolicitante" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Estado actual:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Label fx:id="lblEstadoActual" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>
    </top>

    <center>
        <VBox spacing="5">
            <padding><Insets top="0" right="10" bottom="10" left="10"/></padding>

            <Label text="LÃ­nea de tiempo de cambios:" style="-fx-font-weight: bold;"/>

            <TableView fx:id="tblHistorial" prefHeight="320">
                <columns>
                    <TableColumn fx:id="colFecha"  text="Fecha / Hora" prefWidth="160"/>
                    <TableColumn fx:id="colUsuario" text="Usuario"      prefWidth="180"/>
                    <TableColumn fx:id="colEstadoAnt" text="Estado anterior" prefWidth="140"/>
                    <TableColumn fx:id="colEstadoNuevo" text="Estado nuevo" prefWidth="140"/>
                    <TableColumn fx:id="colComentario" text="Comentario" prefWidth="260"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding><Insets top="5" right="10" bottom="10" left="10"/></padding>
            <Button text="Volver" onAction="#volver"/>
        </HBox>
    </bottom>

</BorderPane>
