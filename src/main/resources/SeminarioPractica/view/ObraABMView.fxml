<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="SeminarioPractica.controller.ObraABMController">

    <top>
        <Label text="ABM de Obras" styleClass="title" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Tabla de obras -->
            <TableView fx:id="tblObras" prefHeight="280.0">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="220"/>
                    <TableColumn fx:id="colUbicacion" text="Ubicación" prefWidth="260"/>
                    <TableColumn fx:id="colActiva" text="Activa" prefWidth="80"/>
                </columns>
            </TableView>

            <!-- Formulario -->
            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints minWidth="80" halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Ubicación:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtUbicacion" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Activa:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <CheckBox fx:id="chkActiva" GridPane.rowIndex="2" GridPane.columnIndex="1" selected="true"/>
            </GridPane>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="Nueva" onAction="#nuevaObra"/>
            <Button text="Guardar" onAction="#guardarObra"/>
            <Button text="Desactivar" onAction="#eliminarObra"/>

            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Volver" onAction="#volver"/>
        </HBox>
    </bottom>
</BorderPane>
