<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="SeminarioPractica.controller.EncargadoABMController">

    <top>
        <Label text="ABM de Encargados" styleClass="title" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Tabla de encargados -->
            <TableView fx:id="tblEncargados" prefHeight="280.0">
                <columns>
                    <TableColumn fx:id="colId"        text="ID"       prefWidth="60"/>
                    <TableColumn fx:id="colNombre"    text="Nombre"   prefWidth="140"/>
                    <TableColumn fx:id="colApellido"  text="Apellido" prefWidth="140"/>
                    <TableColumn fx:id="colEmail"     text="Email"    prefWidth="220"/>
                    <TableColumn fx:id="colActivo"    text="Activo"   prefWidth="70"/>
                </columns>
            </TableView>

            <!-- Formulario -->
            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints minWidth="90" halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Nombre:"    GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre"   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Apellido:"  GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtApellido" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Email:"     GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail"    GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="ContraseÃ±a:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <PasswordField fx:id="txtPassword" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Activo:"   GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <CheckBox fx:id="chkActivo" selected="true"
                          GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="Nuevo"     onAction="#nuevoEncargado"/>
            <Button text="Guardar"   onAction="#guardarEncargado"/>
            <Button text="Desactivar" onAction="#eliminarEncargado"/>

            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Volver" onAction="#volver"/>
        </HBox>
    </bottom>
</BorderPane>
